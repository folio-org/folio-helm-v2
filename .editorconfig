# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.{yml, yaml, tpl}]
indent_size = 2
end_of_line = LF


[*.{py,rst,txt}]
indent_size = 4
end_of_line = LF

[Jenkinsfile]
indent_size = 2
